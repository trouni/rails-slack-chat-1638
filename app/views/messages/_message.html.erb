<div id="message-<%= message.id %>" class="d-flex">
  <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{message.user.username}", class: 'avatar-square' %>
  <div>
    <small>
      <strong><%= message.user.nickname %></strong>
      <i title="<%= message.created_at.strftime('%a %b %e at %l:%M %p') %>">
        <%= time_ago_in_words message.created_at %> ago
      </i>
    </small>
    <p><%= message.content %></p>
  </div>
</div>